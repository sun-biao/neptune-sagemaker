{
  "Description": " - Amazon RDS IAM resources",
  "Parameters": {
    "InfrastructureID": {
      "Description": "Infrastructure ID",
      "Type": "String",
      "AllowedPattern": "[-a-z0-9]+",
      "MaxLength": 50
    }
  },
  "Resources": {
    "RDSEC2ClientRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/"
      }
    },
    "RDSAccessPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "RDSAccessPolicy",
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "rds:*",
                "iam:GetAccountSummary",
                "iam:ListAccountAliases",
                "iam:PassRole"
              ],
              "Resource": "*"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "RDSEC2ClientRole"
          }
        ]
      }
    },
    "RDSEC2InstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/",
        "Roles": [
          {
            "Ref": "RDSEC2ClientRole"
          }
        ]
      },
      "DependsOn": [
        "RDSEC2ClientRole"
      ]
    },
    "RDSIAMAuthPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "RDSIAMAuthPolicy",
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "rds-db:connect"
              ],
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:rds-db:",
                    {
                      "Ref": "AWS::Region"
                    },
                    ":",
                    {
                      "Ref": "AWS::AccountId"
                    },
                    ":dbuser:*/admin"
                  ]
                ]
              }
            }
          ]
        },
        "Roles": [
          {
            "Ref": "RDSEC2ClientRole"
          }
        ]
      }
    }
  },
  "Outputs": {
    "RDSEC2InstanceProfile": {
      "Description": "RDS EC2 instance profile",
      "Value": {
        "Ref": "RDSEC2InstanceProfile"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${InfrastructureID}-RDSEC2InstanceProfile"
        }
      }
    }
  }
}